{
	"parser": "babel-eslint",
    "plugins": ["react"],
    "ecmaFeatures": {
        "modules": true,
        "jsx": true
    },
    "env": {
    	"es6": true,
        "node": true,
        "browser": true
    },
    "rules": {
        "camelcase": 2,
        "comma-dangle": [2, "always-multiline"],
        "curly": 2,
        "eol-last": 2,
        "eqeqeq": 2,
        "guard-for-in": 2,
        "new-cap": [2, {"capIsNewExceptions": ["List", "OrderedMap", "Map", "Range", "Record", "Set", "Stack"]}],

        "no-caller": 2,
        "no-debugger": 2,
        "no-dupe-args": 2,
        "no-dupe-class-members": 0,
        "no-dupe-keys": 2,
        "no-empty": 2,
        "no-new": 2,
        "no-script-url": 2,
        "no-undef": 2,
        "no-unused-expressions": 2,
        "no-unused-vars": 2,
        "no-use-before-define": [2, "nofunc"],
        "no-var": 2,

        "object-shorthand": [2, "methods"],
        "quotes": [2, "single"],
	    "semi": [2, "always"],
        "space-before-blocks": [2, "always"],
        "space-before-function-paren": [2, "never"],
        "spaced-comment": [2, "always", {"exceptions": ["/"]}],
        "max-len": [2, 120, 4],
        "max-statements": [2, 50],
        "no-bitwise": 2,

        "arrow-spacing": [2, {"before": true, "after": true}],
        "comma-spacing": [2, {"before": false, "after": true}],
        "no-multiple-empty-lines": [2, {"max": 2}],
        "one-var": [2, "never"],

        "padded-blocks": [2, "never"],
        "space-before-blocks": [2, "always"],
        "space-before-function-paren": [2, "never"],
        "space-after-keywords": [2, "always"],
        "space-before-keywords": [2, "always"],
        "space-infix-ops": 2,
        "space-in-parens": [2, "never"],
        "prefer-template": 2,
        "react/jsx-uses-react": 1
    },
    "globals": {
        "env": true
    }
}
